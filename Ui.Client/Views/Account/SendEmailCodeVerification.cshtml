@model Ui.Client.Models.SendEmailCodeVm


<div id="login">

  <h1><strong>SendEmailCode</strong></h1>

  <form asp-action="SendEmailCodeVerification">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>

      <p><input asp-for="Email" placeholder="Email" class="text-box"></p>
      <span asp-validation-for="Email" class="text-danger"></span>

      <p><a asp-controller="Account" asp-action="ForgotPassword">Forgot Your Password ?</a></p>

      <p><input type="submit" value="Send"></p>

    </fieldset>

  </form>

</div>

