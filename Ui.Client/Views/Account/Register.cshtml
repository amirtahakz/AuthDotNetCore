@model Ui.Client.Models.RegisterVm

 <div class="row">
  <div class="col-md-12">
<div id="Register">

  <h1><strong>Welcome.</strong> Please Register.</h1>

  <form method="post" asp-controller="Account" asp-action="Register">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>

      <p><input asp-for="Email" placeholder="Email" class="text-box"></p>
      <span asp-validation-for="Email" class="text-danger"></span>

      <p><input asp-for="Phone" placeholder="Phone" type="tel"></p>
      <span asp-validation-for="Phone" class="text-danger"></span>

      <p><input asp-for="Password" placeholder="Password"></p>
      <span asp-validation-for="Password" class="text-danger"></span>

      <p><input asp-for="RePassword" placeholder="RePassword"></p>
      <span asp-validation-for="RePassword" class="text-danger"></span>

      <p><input type="submit" value="Register"></p>

    </fieldset>

  </form>
</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


