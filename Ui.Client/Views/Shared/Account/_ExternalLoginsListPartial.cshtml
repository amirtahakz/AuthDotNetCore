@model Ui.Client.Models.LoginVm

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div>
    @{
        if (Model.ExternalLogins.Count == 0)
        {
            <div>No external login</div>
        }
        else
        {
            <p><span class="btn-round">or</span></p>
            <form method="post" asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="returnUrl">
                @foreach (var provider in Model.ExternalLogins)
                {
                    <p>

    <a class="external-login-before"><span class="fontawesome-google"></span></a>
    <button type="submit" name="provider" title="Login using your @provider.DisplayName account" value="@provider.Name" class="external-login">Login Using @provider.DisplayName</button>

  </p>
                }
            </form>
        }
    }
</div>
